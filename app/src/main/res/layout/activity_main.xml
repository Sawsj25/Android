<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidlineenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0.30pt"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidlineexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    <Button
        android:id="@+id/btnenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guidlineenter"
        app:layout_constraintLeft_toLeftOf="@id/guidlineenter"
        app:layout_constraintRight_toRightOf="@id/guidlineenter"
        app:layout_constraintBottom_toBottomOf="@id/guidlineenter"
        />

    <Button
        android:id="@+id/btnexit"
        android:layout_width="6dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guidlineexit"
        app:layout_constraintLeft_toLeftOf="@id/guidlineexit"
        app:layout_constraintRight_toRightOf="@id/guidlineexit"
        app:layout_constraintTop_toTopOf="@id/guidlineexit" />


</androidx.constraintlayout.widget.ConstraintLayout>